<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="29dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/panel_inactive"
    android:elevation="4dp"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/save_popup_button"
            style="@style/AppTheme.Button.Popup"
            android:layout_width="match_parent"
            android:background="@drawable/button_green"
            android:layout_marginTop="20dp"
            android:text="@string/save"
            app:layout_constraintTop_toBottomOf="@+id/food_moth" />

        <Button
            android:id="@+id/abort_popup_button"
            style="@style/AppTheme.Button.Popup"
            android:layout_width="match_parent"
            android:background="@drawable/button_blue"
            android:layout_marginTop="20dp"
            android:text="@string/abort"
            app:layout_constraintTop_toBottomOf="@+id/save_popup_button" />

        <TextView
            android:id="@+id/small_mealworm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Малый мучной хрущак"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/suriname_mucoed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Суринамский мукоед"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/small_mealworm" />

        <TextView
            android:id="@+id/food_moth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Пищевая моль"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/suriname_mucoed" />


        <EditText
            android:id="@+id/small_mealworm_value"
            style="@style/AppTheme.EditText.Profile"
            android:hint="0"
            app:layout_constraintStart_toEndOf="@id/small_mealworm"
            app:layout_constraintTop_toTopOf="@+id/small_mealworm" />

        <EditText
            android:id="@+id/suriname_mucoed_value"
            style="@style/AppTheme.EditText.Profile"
            android:hint="0"
            app:layout_constraintStart_toEndOf="@id/suriname_mucoed"
            app:layout_constraintTop_toTopOf="@+id/suriname_mucoed" />

        <EditText
            android:id="@+id/food_moth_value"
            style="@style/AppTheme.EditText.Profile"
            android:hint="0"
            app:layout_constraintStart_toEndOf="@id/food_moth"
            app:layout_constraintTop_toTopOf="@+id/food_moth"
            tools:ignore="MissingConstraints" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
