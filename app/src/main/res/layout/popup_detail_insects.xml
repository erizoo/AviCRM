<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="29dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/panel_inactive"
    android:elevation="4dp"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/save_popup_button"
            style="@style/AppTheme.Button.Popup"
            android:layout_width="match_parent"
            android:background="@drawable/button_green"
            android:text="@string/save"
            app:layout_constraintTop_toBottomOf="@+id/food_moth" />

        <Button
            android:id="@+id/abort_popup_button"
            style="@style/AppTheme.Button.Popup"
            android:layout_width="match_parent"
            android:background="@drawable/button_blue"
            android:text="@string/abort"
            app:layout_constraintTop_toBottomOf="@+id/save_popup_button" />

        <TextView
            android:id="@+id/midges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="Мошки"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner" />

        <TextView
            android:id="@+id/flies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Мухи"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/midges" />

        <TextView
            android:id="@+id/gold-eyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Златоглазка"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flies" />

        <TextView
            android:id="@+id/mosquitoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Комары"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gold-eyed" />

        <TextView
            android:id="@+id/wasps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Осы"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mosquitoes" />

        <TextView
            android:id="@+id/food_moth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Пищевая моль"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wasps" />

        <EditText
            android:id="@+id/editText"
            style="@style/AppTheme.EditText.Profile"
            app:layout_constraintStart_toEndOf="@id/midges"
            app:layout_constraintTop_toTopOf="@+id/midges" />

        <EditText
            android:id="@+id/editText2"
            style="@style/AppTheme.EditText.Profile"
            app:layout_constraintStart_toEndOf="@id/flies"
            app:layout_constraintTop_toTopOf="@+id/flies" />

        <EditText
            android:id="@+id/editText3"
            style="@style/AppTheme.EditText.Profile"
            app:layout_constraintStart_toEndOf="@id/gold-eyed"
            app:layout_constraintTop_toTopOf="@+id/gold-eyed"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editText4"
            style="@style/AppTheme.EditText.Profile"
            app:layout_constraintStart_toEndOf="@id/mosquitoes"
            app:layout_constraintTop_toTopOf="@+id/mosquitoes"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editText5"
            style="@style/AppTheme.EditText.Profile"
            app:layout_constraintStart_toEndOf="@id/wasps"
            app:layout_constraintTop_toTopOf="@+id/wasps"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editText6"
            style="@style/AppTheme.EditText.Profile"
            app:layout_constraintStart_toEndOf="@id/food_moth"
            app:layout_constraintTop_toTopOf="@+id/food_moth"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/my_edit_text_border"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
