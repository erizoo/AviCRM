<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.EditText.Authorization" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/my_edit_text_border</item>
    </style>

    <style name="AppTheme.EditText.Profile" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@drawable/my_edit_text_border</item>
        <item name="android:maxLength">2</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="AppTheme.Button.Authorization" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignStart">@id/login</item>
        <item name="android:layout_alignEnd">@id/login</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/colorButton</item>
    </style>

    <style name="AppTheme.Button.Popup" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">19sp</item>
    </style>

    <color name="colorWhite">#FFFFFF</color>
</resources>
